<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="uninstall_module_form_view" model="ir.ui.view">
        <field name="name">base.uninstall.modules.form</field>
        <field name="model">base.uninstall.modules</field>
        <field name="arch" type="xml">
            <form string="Base Uninstall Modules">
                <field name="target_db_ids">
                    <tree editable="bottom" string="Target Database">
                        <field name="name" />
                    </tree>
                </field>
                <field name="uninstall_module_ids">
                    <tree editable="bottom" string="Uninstall Modules">
                        <field name="name" />
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_base_uninstall_modules_form">
        <field name="name">Uninstall Module List</field>
        <field name="res_model">base.uninstall.modules</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="view_id" ref="uninstall_module_form_view"/>
    </record>

    <menuitem id="menu_uninstall_module_list" name="Audit"
        parent="base.menu_custom" sequence="50"
        groups="base.group_system"
    />
</odoo>
